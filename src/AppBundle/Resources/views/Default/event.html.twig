{% extends '::base.html.twig' %}
{% trans_default_domain "app" %}

{% block navigation %}
    {% include 'AppBundle:Default:nav.html.twig' %}
{% endblock %}

{% block body %}
    {# dump(entries) #}
    {# Twig macros #}
    {% from 'AppBundle:admin:macro.html.twig' import inputEditButtons as inputEditButtons %}
  
    <!-- Page Content -->
    <div class="container">
        <!-- Event Section -->
        <div class="row">
        {% for entry in entries %}
         {% if entry.type == 'event_entry' %} 
            <div class="col-lg-12">
                <h2 class="page-header">{{ entry.title }}</h2>
            </div>
            <div class="col-md-6">
                <p>{{ entry.content }}</p>
                {# inputList(entry) #}
            </div>
            <div class="col-md-6">
                <img class="img-responsive" src="{{ entry.imagepath }}" alt="">
            </div>
            {% if app.user %}
                <p>{{ inputEditButtons(adminEditEntryRoute,entry.id) }}</p>
            {% endif %}
         {% endif %}
        {% endfor %}
    </div>
    <!-- /.container -->
{% endblock %}